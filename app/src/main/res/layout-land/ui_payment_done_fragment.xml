<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.PaymentDoneFragment">

    <ImageView
        android:id="@+id/imgIco"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_done"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txtOrderSendendMessage"
        />

    <TextView
        android:id="@+id/txtOrderSendendMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/txt_payment_done"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
        android:layout_marginEnd="@dimen/common_padding_default"
        android:layout_marginRight="@dimen/common_padding_default"
        android:layout_marginStart="@dimen/common_padding_default"
        android:layout_marginLeft="@dimen/common_padding_default"
        app:layout_constraintTop_toBottomOf="@id/imgIco"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonnDone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/button_acept"
        app:cornerRadius="@dimen/common_padding_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/common_padding_default"
        android:layout_marginEnd="@dimen/common_padding_default"
        app:layout_goneMarginEnd="@dimen/common_padding_default"
        />

</androidx.constraintlayout.widget.ConstraintLayout>