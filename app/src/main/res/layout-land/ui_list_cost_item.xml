<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAmountPayment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_padding_min"
        android:layout_marginTop="@dimen/common_padding_min"
        android:layout_marginEnd="@dimen/common_padding_min"
        app:cardCornerRadius="@dimen/common_padding_min"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/imgQuote"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@color/color_primary_variant_ligth"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtQuoteNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/txt_quote"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
                android:textColor="@color/color_secondary_variant_light"
                app:layout_constraintEnd_toEndOf="@id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/txtQuoteName"/>

            <TextView
                android:id="@+id/txtQuoteName"
                style="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/txt_quote_name"
                android:textColor="@color/color_secondary_variant_light"
                app:layout_constraintEnd_toEndOf="@id/txtQuoteNumber"
                app:layout_constraintStart_toStartOf="@id/txtQuoteNumber"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/common_padding_micro"/>

            <TextView
                android:id="@+id/txtQuoteAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/txt_quote_amount"
                style="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:gravity="center_horizontal"
                app:layout_constraintStart_toStartOf="@id/guideline"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintTop_toTopOf="parent"
                android:textStyle="bold|italic"
                />

            <TextView
                android:id="@+id/lblQuoteAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/lbl_quote_amount"
                android:gravity="center_horizontal"
                app:layout_constraintStart_toStartOf="@id/guideline"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/txtQuoteAmount"
                />

            <TextView
                android:id="@+id/txtTotalAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/txt_quote_amount"
                style="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:gravity="center_horizontal"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textStyle="bold|italic"
                />

            <TextView
                android:id="@+id/lblTotalAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/lbl_total_amount"
                android:gravity="center_horizontal"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtTotalAmount"
                />


            <TextView
                android:id="@+id/txtFee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/txt_fee"
                style="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:textSize="@dimen/small_text_size"
                android:gravity="center_horizontal"
                app:layout_constraintStart_toStartOf="@id/guideline"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintBottom_toTopOf="@id/lblFee"
                android:textStyle="bold|italic"
                />

            <TextView
                android:id="@+id/lblFee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/lbl_fee"
                android:gravity="center_horizontal"
                android:textSize="@dimen/small_text_size"
                app:layout_constraintStart_toStartOf="@id/guideline"
                app:layout_constraintEnd_toEndOf="@id/guideline2"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <TextView
                android:id="@+id/txtDiscount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/txt_discount"
                style="@style/TextAppearance.MaterialComponents.Subtitle2"
                android:textSize="@dimen/small_text_size"
                android:gravity="center_horizontal"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/lblDiscount"
                android:textStyle="bold|italic"
                />

            <TextView
                android:id="@+id/lblDiscount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/lbl_discount"
                android:textSize="@dimen/small_text_size"
                android:gravity="center_horizontal"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.15" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.575" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>