<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GeoTheme.DayNigth.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="key" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">35dp</item>
        <item name="android:textColor">@color/color_primary_variant_ligth</item>
        <item name="android:layout_marginLeft">@dimen/common_padding_min</item>
        <item name="android:layout_marginStart">@dimen/common_padding_min</item>
        <item name="android:layout_marginRight">@dimen/common_padding_min</item>
        <item name="android:layout_marginEnd">@dimen/common_padding_min</item>
    </style>

</resources>